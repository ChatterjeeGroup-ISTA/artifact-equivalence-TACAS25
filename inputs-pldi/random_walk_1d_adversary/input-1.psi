
def main(){
    x:=0;
    time:=0;
    for counter in [0..1000){
        if flip(8/10)==1 {}
        else 
        {
            if flip(1/2)==1
            {
                x=x+1;
            }
            else 
            {
                x=x+2;
            }
        }
        if flip(875/1000)==1
        {
            x=x-1;
        }
        else {}
        time=time+x;
    }
    observe(time>=500);
    return (x,time);
}